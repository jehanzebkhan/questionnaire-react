# @cjsx React.DOM@Answers = React.createClass  getInitialState: ->    answers: @props.data    show_message: 'none'    message: ''    message_class: ''  getDefaultProps: ->    answers: []  addAnswer: (answer) ->    answers = @state.answers.slice()    answers.push answer    @setState answers: answers    @displayMessage("New answer added!!!", "success")  deleteAnswer: (answer) ->    index = @state.answers.indexOf answer    answers = React.addons.update(@state.answers, { $splice: [[index, 1]] })    @replaceState answers: answers    @displayMessage("Answer deleted successfully!!!", "success")  updateAnswer: (answer, data) ->    index = @state.answers.indexOf answer    answers = React.addons.update(@state.answers, { $splice: [[index, 1, data]] })    @replaceState answers: answers    @displayMessage("Answer updated successfully!!!", "success")  displayMessage: (message_string, message_type) ->    @setState show_message: 'block'    @setState message: message_string    @setState message_class: "alert alert-" + message_type  render: ->    <div className="answers">      <h2 className="title">Answers</h2>      <div className={this.state.message_class} style={{display: this.state.show_message }}>{this.state.message}</div>      {React.createElement AnswerForm, handleNewAnswer: @addAnswer}      <hr />      <table className="table table-bordered">        <thead>          <tr>            <th>Label</th>            <th>Actions</th>          </tr>        </thead>        <tbody>          {            for answer in @state.answers              React.createElement Answer, key: answer.id, answer: answer, handleDeleteAnswer: @deleteAnswer, handleUpdateAnswer: @updateAnswer          }        </tbody>      </table>    </div>