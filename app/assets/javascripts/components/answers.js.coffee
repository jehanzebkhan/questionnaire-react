# @cjsx React.DOM@Answers = React.createClass  getInitialState: ->    answers: @props.data  getDefaultProps: ->    answers: []  addAnswer: (answer) ->    answers = @state.answers.slice()    answers.push answer    @setState answers: answers  deleteAnswer: (answer) ->    index = @state.answers.indexOf answer    answers = React.addons.update(@state.answers, { $splice: [[index, 1]] })    @replaceState answers: answers  updateAnswer: (answer, data) ->    index = @state.answers.indexOf answer    answers = React.addons.update(@state.answers, { $splice: [[index, 1, data]] })    @replaceState answers: answers  render: ->    <div className="answers">      <h2 className="title">Answers</h2>      {React.createElement AnswerForm, handleNewAnswer: @addAnswer}      <hr />      <table className="table table-bordered">        <thead>          <tr>            <th>Label</th>            <th>Actions</th>          </tr>        </thead>        <tbody>          {for answer in @state.answers            React.createElement Answer, key: answer.id, answer: answer, handleDeleteAnswer: @deleteAnswer, handleUpdateAnswer: @updateAnswer}        </tbody>      </table>    </div>